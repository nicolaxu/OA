<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_cardview_height"
    android:padding="@dimen/activity_vertical_margin"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/gray"
    android:id="@+id/item_work_task_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_work_task"
            android:layout_width="@dimen/iv_detail_width"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:src="@mipmap/message_enterprise_news"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_work_task_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                tools:text="管理员"/>

            <TextView
                android:id="@+id/tv_item_work_report_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                tools:text="这是一个测试的标题"
                android:textSize="@dimen/tv_item_detail_title_size"/>

            <TextView
                android:id="@+id/tv_item_work_task_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                tools:text="2016-7-20"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>