<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.workReport.WorkReportMainActivity"
    tools:showIn="@layout/activity_work_report_main"
    android:orientation="vertical"
    android:background="@color/gray"
    android:padding="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_my_report_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ll_todo_height"
            android:background="@drawable/bg_ll_todo"
            android:paddingLeft="@dimen/ll_todo_padding"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/iv_report_width"
                android:layout_height="@dimen/iv_report_height"
                android:src="@mipmap/folder_my_report"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/tv_my_report_list"
                android:textSize="@dimen/tv_todo_size"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_others_report_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ll_todo_height"
            android:background="@drawable/bg_ll_todo"
            android:paddingLeft="@dimen/ll_todo_padding"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/iv_report_width"
                android:layout_height="@dimen/iv_report_height"
                android:src="@mipmap/folder_others_report"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/tv_others_report_list"
                android:textSize="@dimen/tv_todo_size"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_create_new_report"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ll_todo_height"
            android:background="@drawable/bg_ll_todo"
            android:paddingLeft="@dimen/ll_todo_padding"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/iv_report_width"
                android:layout_height="@dimen/iv_report_height"
                android:src="@mipmap/folder_create_new_report"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/tv_create_new_report"
                android:textSize="@dimen/tv_todo_size"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>